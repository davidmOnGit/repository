<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <managed-bean>
  <managed-bean-name>UIControllerBean</managed-bean-name>
  <managed-bean-class>de.david.UiController</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
  <managed-property>
   <property-name>springPojo</property-name>
   <property-class>de.david.springbeans.SpringPojo</property-class>
   <value>#{springPojo}</value>
  </managed-property>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>uIDataBean</managed-bean-name>
  <managed-bean-class>de.david.UIDataBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <from-view-id>/index.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{UIControllerBean.goToMainPage}</from-action>
   <from-outcome>mainPage</from-outcome>
   <to-view-id>/poop.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/poop.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{UIControllerBean.goToMainPage}</from-action>
   <from-outcome>mainPage</from-outcome>
   <to-view-id>/schoop.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
 </application>
</faces-config>
